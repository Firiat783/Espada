<h1>Категории</h1>
    <table class="table">
<% @categories.each do |category| %>
    <tr>
        <td><%= link_to category.name, category %></td>
      <% if signed_in? %>
        <td><%= link_to 'Редактировать категорию', edit_category_path(category) %></td>
        <td><%= link_to 'BUUUUUUUUURN!!!!', category, method: :delete, confirm: 'Точно сжечь?' %></td>
      <% end %>
    </tr>
<% end %>
    </table>
<br>

<% if signed_in? %>
    <%= link_to "Создать категорию", new_category_path, class: 'btn' %>
<% end %>